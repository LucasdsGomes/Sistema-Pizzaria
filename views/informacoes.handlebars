<main>
  <div class="container">
    <table class="table mt-5">
      <h2 id="tituloInformacoes">Informações</h2>
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Sabor</th>
          <th scope="col">Tamanho</th>
          <th scope="col">Quantidade</th>
        </tr>
      </thead>
      <tbody>
        {{#each novosSabores}}
          <tr>
            <th scope="row">{{@index}}</th>
            <td>
            <a href="/pedido/informacao/{{this.id}}">{{this.saborInserido}}</a>
            </td>
            <td>
            <a>{{this.tamanhoPizza}}</a>
            </td>
            <td>
            <a>{{this.quantidadePedido}}</a>
            </td>
          </tr>
        {{else}}
          <tr>
            <th scope="row" colspan="4">Não há sabores criados.</th>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</main>
